%article.post
  .zig-zag
  .content
    %header
      .top
        %i{class: "category fa fa-#{@cat[post.category.to_sym]}"}
        %h2= post.title
      .post-meta
        %span.author= post.author_name
        %span.stars
          %i.fa.fa-star
          %i.fa.fa-star
          %i.fa.fa-star
          %i.fa.fa-star
          %i.fa.fa-star
        %time{}= I18n.l(post.published_at, format: '%d/%m/%y')
    .post-content
      = index_view ? post.short_description : post.html_body
    %footer
      - if index_view
        = link_to 'Read More', post_path(*post.url_params)
      - else
        = render 'social', post: post
  .zig-zag-down
