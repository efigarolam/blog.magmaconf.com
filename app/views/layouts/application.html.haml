!!! html5
%html
  %head
    %title Blog MagmaConf
    = stylesheet_link_tag 'application', media: 'all'
    = csrf_meta_tags
  %body
    .container
      .row
        %aside.three-columns
          = render 'aside'

        %nav.eight-columns
          = render 'header'

        %section.eight-columns

    .container
      %main
        = yield
        %footer
          = yield :main_footer
        %img{ src: '', alt: 'banner' }
      %aside
        = render 'aside'
    %footer
      = render 'footer'

    = javascript_include_tag 'application'
    = yield :scripts
