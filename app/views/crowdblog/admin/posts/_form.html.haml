.row
  .span12
    .control-group.title
      = f.label :title, :class => 'control-label'
      .controls
        = f.text_field :title, :class => "input-xlarge span5"
        %span.help-inline.title

.row
  .control-group.body
    .span12
      = label_tag 'post_body', 'Body', class: 'control-label'
    .controls.span5
      = f.text_area :body, :class => "span5", :rows => 20
      .categories{style: 'padding: 10px 0'}
        = radio_button 'post', 'category',  'news', style: 'margin: -4px 0 0 10px'
        News
        = radio_button 'post', 'category', 'judges', style: 'margin: -4px 0 0 10px'
        Judges
        = radio_button 'post', 'category', 'speakers', style: 'margin: -4px 0 0 10px'
        Speakers
        = radio_button 'post', 'category', 'sponsors', style: 'margin: -4px 0 0 10px'
        Sponsors
      %span.help-inline= link_to 'Markdown syntax', 'http://daringfireball.net/projects/markdown/syntax', target: '_BLANK'

    #post-preview.span7
      .inner

.row.form-box
  .span5
    #uploader
      .inner Drop images...

  .span7#assets
    - f.object.assets.each do |asset|
      .asset= "![image alt](#{asset.attachment_url})"

:javascript
  $(function() {
    return new Crowdblog.Views.PostFormView;
  });
